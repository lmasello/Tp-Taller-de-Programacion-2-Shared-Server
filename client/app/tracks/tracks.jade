music-header

.tracks
    h1 Canciones
    .loader(ng-if='!$ctrl.loaded')
    .content(ng-if='$ctrl.show==="list"')
        .tracks-list
            ul
                li(ng-repeat="track in $ctrl.tracks")
                    a(href='#' ng-click='$ctrl.editTrack(track)') {{track.id}} {{track.name}}
        .add-song
            form(action='')
                p Agregar
                input(type='name', placeholder='Nombre', ng-model='$ctrl.newTrack.name')
                input(type='duration', placeholder='Duraci√≥n', ng-model='$ctrl.newTrack.duration')
                input(type='artist', placeholder='Artista', ng-model='$ctrl.newTrack.artist')
                input(type='button', value='Agregar', ng-click='$ctrl.addTrack()')

    edit-track(track='$ctrl.trackToEdit', ng-if='$ctrl.show==="edit"')